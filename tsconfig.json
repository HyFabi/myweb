{
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.json", "src/**/*.vue", "src/**/*.js"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "isolatedModules": false,
    "resolveJsonModule": true,
    "module": "es2022",
    "moduleDetection": "auto",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
